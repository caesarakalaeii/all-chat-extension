{
  "manifest_version": 3,
  "name": "All-Chat Extension",
  "version": "1.2.6",
  "description": "Replace native platform chat with unified All-Chat experience",

  "browser_specific_settings": {
    "gecko": {
      "id": "allchat@allch.at",
      "strict_min_version": "109.0"
    }
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://www.youtube.com/*",
    "http://localhost:8080/*",
    "https://allch.at/*"
  ],

  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"],
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content-scripts/twitch.js"],
      "css": ["content-scripts/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/watch*", "https://www.youtube.com/live/*"],
      "js": ["content-scripts/youtube.js"],
      "css": ["content-scripts/styles.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "ui/chat-container.html",
        "ui/chat-bundle.js",
        "ui/chat-styles.css",
        "assets/*"
      ],
      "matches": [
        "https://www.twitch.tv/*",
        "https://www.youtube.com/*"
      ]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },

  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
